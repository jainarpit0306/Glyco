<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Logo-Inspired Teal Theme -->
    <style name="Theme.Glyco" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Logo colors -->
        <item name="colorPrimary">@color/logo_primary</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary Logo colors -->
        <item name="colorSecondary">@color/logo_accent</item>
        <item name="colorSecondaryVariant">@color/teal_600</item>
        <item name="colorOnSecondary">@color/teal_800</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/logo_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/teal_800</item>
        <item name="colorOnSurface">@color/teal_700</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/logo_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/teal_800</item>
        <item name="android:textColorSecondary">@color/teal_600</item>
        
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Light theme variant -->
    <style name="Theme.Glyco.Light" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/logo_primary</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/logo_accent</item>
        <item name="colorSecondaryVariant">@color/teal_600</item>
        <item name="colorOnSecondary">@color/teal_800</item>
        <item name="android:colorBackground">@color/logo_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/logo_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>
