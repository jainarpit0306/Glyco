<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Deep Blue Medical Theme -->
    <style name="Theme.Glyco" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/logo_accent</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/logo_secondary</item>
        <item name="colorSecondaryVariant">@color/blue_600</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/logo_dark</item>
        <item name="colorSurface">@color/logo_light</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/logo_text_secondary</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/logo_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/logo_text_secondary</item>
        
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Light theme variant aligned to deep blue cards -->
    <style name="Theme.Glyco.Light" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/logo_accent</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/logo_secondary</item>
        <item name="colorSecondaryVariant">@color/blue_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/blue_50</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/logo_accent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>
