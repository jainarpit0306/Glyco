<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme -->
    <style name="Theme.Glyco.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/logo_accent</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/logo_dark</item>
        <item name="colorSurface">@color/logo_light</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/logo_text_secondary</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/logo_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/logo_dark</item>
        
        <!-- Full screen -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Customize your theme here. -->
    </style>
</resources>
